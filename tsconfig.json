{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "target": "ES2022"
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./dist"]
}
